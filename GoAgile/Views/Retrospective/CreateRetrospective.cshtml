@using GoAgile.Models
@model CreateRetrospectiveViewModel
@{
    ViewBag.Title = "Create Retrospective";
}

@using (Html.BeginForm())
{
    <div class="container">

    @Html.AntiForgeryToken()
        <h2>Create Retrospective</h2>
        @Html.ValidationSummary(true)
        <div class="well well-lg">
            <div class="form-group">
                @Html.LabelFor(m => m.RetrospectiveName, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.RetrospectiveName, new { @class = "form-control", @placeholder = "Enter Retrospective Name" })
                @Html.ValidationMessageFor(m => m.RetrospectiveName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Project, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Project, new { @class = "form-control", @placeholder = "Enter Project Name" })
                @Html.ValidationMessageFor(m => m.Project, "", new { @class = "text-danger" })
            </div>
             <div class="form-group">
                @Html.LabelFor(m => m.Comment, new { @class = "control-label" })
                @Html.TextArea("Comment", null,  new { @class = "form-control", @placeholder = "Enter Short Comment" })
                @Html.ValidationMessageFor(m => m.Comment, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.DatePlanned, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.DatePlanned, new { @class = "form-control", @placeholder = "dd/MM/yyyy", @id = "date" })
                @Html.ValidationMessageFor(m => m.DatePlanned, "", new { @class = "text-danger" })
            </div>
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
}

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script>
        $('#date').datepicker({
            format: "dd/mm/yyyy",
            autoclose: true,
            todayHighlight: true
        });
    </script>



 




