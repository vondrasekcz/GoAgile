@using GoAgile.Models
@model RetrospectiveViewModel
@{
    ViewBag.Title = "Retrospective";
}

@section scripts{
    <script src="~/Scripts/jquery.signalR-2.2.1.js"></script>
    <script type="text/javascript" src="~/signalr/hubs"></script>    
    <link href="~/Content/customModals.css" rel="stylesheet" />
    <script>
        // TODO: own script file

        $(function () {
            //  state: "waiting", "running", "presenting"
            var state;

            // Retrospective Guid
            var guidId;

            // Admin
            var isOwner;

            // show Login modal after page load
            $(document).ready(function () {
                state = '@Model.State';
                guidId = '@Model.GuidId';
                isOwner = '@Model.Owner';

                if (isOwner == "owner")
                    $('#modalOwner').modal('show');
                else
                    $('#modalLogin').modal('show');

                // TODO: delete
                $('#sendstate').text(state);
                $('#sendguid').text(guidId);
                $('#curstate').text(state);
            });


            var retHub = $.connection.retrospectiveHub;

            $.connection.hub.start();

            // Login user
            $('#modalLogInButton').click(function () {
                retHub.server.loginUser($('#modalNickName').val(), $('#modalEmail').val(), guidId);
            });

            // Invalid input Login modal
            retHub.client.invalidLoginInput = function () {
                $('#testInValidInput').text("invalid input");
                // TODO:
            };

            // User is logged
            retHub.client.userLogged = function () {
                switch (state) {
                    case "waiting":
                        $('#modalWaiting').modal('show');
                        $('#modalLogin').modal('hide');
                        break;
                    case "running":
                    case "presenting":
                        $('#modalWaiting').modal('hide');
                        $('#modalLogin').modal('hide');
                        break;
                }
            };

            // Start Retrospective
            $('#startRetrospective').click(function () {
                retHub.server.startRetrospective(guidId);
            });

            // Retrospective started
            retHub.client.startRequest = function () {
                state = "running";
                $('#modalWaiting').modal('hide');
                $('#modalOwner').modal('hide');
            }

            retHub.client.updateUsersOnlineCount = function (count) {
                $('#usersCount').text(count);
            };

        });</script>
}





<br>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">
            <ul class="nav nav-sidebar">
                UsersOnline:
                <div id="usersCount"></div>
            </ul>
            <ul class="nav nav-sidebar">
                current state:
                <div id="curstate"></div>
            </ul>
            <ul class="nav nav-sidebar">
                send guid:
                <div id="sendguid"></div>
            </ul>
            <ul class="nav nav-sidebar">
                send state:
                <div id="sendstate"></div>
            </ul>
        </div>
        <div class="col-md-10">
                <div class="row">

                    <div class="col-sm-4 text-center">
                        <div class="well">
                            <div class="title-marketing"><h3>Start</h3></div>

                        </div>
                    </div>
                    <div class="col-sm-4 text-center">
                        <div class="well">
                            <div class="title-marketing"><h3>Stop</h3></div>

                        </div>
                    </div>
                    <div class="col-sm-4 text-center">
                        <div class="well">
                            <div class="title-marketing"><h3>Continue</h3></div>

                        </div>
                    </div>
                </div>
            </div>
    </div>
</div>
<br>



















<!-- Modal LogIn-->
<div class="modal fade" id="modalLogin" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header modal-header-primary text-center">
                <h1>Enter Retrospective</h1>
            </div>
            <div class="modal-body">
                <form id="logInForm">
                    <div class="form-group">
                        <label for="recipient-name" class="control-label">NickName:</label>
                        <input type="text" class="form-control" id="modalNickName" name="modalNickName" placeholder="Enter Nick Name">
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="control-label">Email:</label>
                        <input type="text" class="form-control" id="modalEmail" name="modalEmail" placeholder="Enter Email">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <!-- remove after implementation of valdiation messages --> <div id="testInValidInput"></div>
                <button type="button" id="modalLogInButton" class="btn btn-primary text-center">Enter</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<!-- Modal Waiting-->
<div class="modal fade" id="modalWaiting" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header modal-header-primary text-center">
                <h1>Waiting for the Start</h1>
            </div>
            <div class="modal-body">
                Please Wait until Retrospective starts.
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<!-- Modal Owner-->
<div class="modal fade" id="modalOwner" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header modal-header-primary text-center">
                <h1>Start the Retrospective</h1>
            </div>
            <div class="modal-body">
                <div>Copy this URL and sent to your team</div>
                <div id="modalUrl"></div>
            </div>
            <div class="modal-footer">
                <button type="button" id="startRetrospective" class="btn btn-primary text-center">Start the Retrospective</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->